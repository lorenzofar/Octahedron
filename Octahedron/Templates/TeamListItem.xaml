<UserControl
    x:Class="Octahedron.Templates.TeamListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Octahedron.Templates"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Margin="0,12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Ellipse Width="48" Height="48" MaxHeight="48" MaxWidth="48" Fill="#88888888"/>
        <FontIcon VerticalAlignment="Center" HorizontalAlignment="Center" Glyph="&#xF019;" FontFamily="ms-appx:/Assets/octicons.ttf#octicons"/>

        <Grid Margin="12,0" VerticalAlignment="Center" Grid.Column="1">
            <TextBlock Text="{Binding Name}"/>
        </Grid>
    </Grid>
</UserControl>
