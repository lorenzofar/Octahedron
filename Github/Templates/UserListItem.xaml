<UserControl
    x:Class="Github.Templates.UserListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Github.Templates"
    xmlns:converters="using:Github.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:UserNameConverter x:Key="UserNameConverter"/>
    </UserControl.Resources>

    <Grid Margin="0,12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Ellipse Width="48" Height="48" MaxHeight="48" MaxWidth="48">
            <Ellipse.Fill>
                <ImageBrush ImageSource="{Binding AvatarUrl}"/>
            </Ellipse.Fill>
        </Ellipse>
        <Grid Margin="12,0" VerticalAlignment="Center" Grid.Column="1">
            <TextBlock Text="{Binding Login}"/>
        </Grid>
    </Grid>
</UserControl>
