<UserControl
    x:Class="Github.Templates.PullsListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Github.Templates"
    xmlns:converters="using:Github.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:PullStateConverter x:Key="PullStateConverter"/>
        <converters:NumberConverter x:Key="NUmberConverter"/>
    </UserControl.Resources>

    <Grid Margin="0,6,6,6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <FontIcon Glyph="&#xEC0A;" Foreground="{Binding Converter={StaticResource PullStateConverter}}" VerticalAlignment="Center"/>
        <StackPanel Margin="12,0" Grid.Column="1">
            <TextBlock Text="{Binding Path=Title}"/>
            <TextBlock Text="{Binding Path=UpdatedAt}" Foreground="#999999" Style="{ThemeResource CaptionTextBlockStyle}"/>
        </StackPanel>
        <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{Binding Path=Number, Converter={StaticResource NumberConverter}}"/>
    </Grid>
</UserControl>
